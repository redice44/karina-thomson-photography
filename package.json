{
  "name": "karina-thomson-photography",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc && mkdir -p ./dist/server/views && mkdir -p ./dist/server/assets/{js,css} && cp ./src/server/views/* ./dist/server/views",
    "clean": "find ./src -type f -name '*.js' -delete && find ./src -type f -name '*.js.map' -delete",
    "clean-dist": "rm -rf ./dist",
    "start:dev": "nodemon --watch dist --delay 2 -e js,pug dist/index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch:app": "nodemon --watch src/app -e tsx --exec \"webpack\"",
    "watch:sass": "node-sass --output-style compact ./src/sass -o ./dist/server/assets/css && node-sass --output-style compact -w ./src/sass -o ./dist/server/assets/css ",
    "watch:server": "nodemon --watch src/server -e ts,pug --exec \"npm run build\""
  },
  "keywords": [],
  "author": "Matt Thomson <mthomson.lee@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.11.1",
    "@types/node": "^9.4.7",
    "@types/react": "^16.0.40",
    "@types/react-dom": "^16.0.4",
    "awesome-typescript-loader": "^4.0.1",
    "node-sass": "^4.7.2",
    "source-map-loader": "^0.2.3",
    "typescript": "^2.7.2",
    "webpack": "^4.1.1",
    "webpack-cli": "^2.0.12"
  },
  "dependencies": {
    "express": "^4.16.3",
    "nodemon": "^1.17.2",
    "pug": "^2.0.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0"
  }
}
